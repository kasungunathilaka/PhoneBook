services:
  db:
    environment:
      ACCEPT_EULA: "Y"
      SA_PASSWORD: root
    image: microsoft/mssql-server-linux
  phonebook.webapi:
    build:
      context: D:\Workspace\PhoneBook
      dockerfile: PhoneBook.WebAPI/Dockerfile
    depends_on:
    - db
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      NUGET_FALLBACK_PACKAGES: /root/.nuget/fallbackpackages
    image: phonebook.webapi:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages
        --additionalProbingPath /root/.nuget/fallbackpackages  bin/Debug/netcoreapp2.0/PhoneBook.WebAPI.dll'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/bash -c "if PID=$$(pidof
        -x dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    ports:
    - 80/tcp
    volumes:
    - D:\Workspace\PhoneBook\PhoneBook.WebAPI:/app:rw
    - C:\Users\kasung\vsdbg\vs2017u5:/remote_debugger:ro
    - C:\Program Files\dotnet\sdk\NuGetFallbackFolder:/root/.nuget/fallbackpackages:ro
    - C:\Users\kasung\.nuget\packages:/root/.nuget/packages:ro
version: '3.0'